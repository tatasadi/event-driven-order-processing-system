{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"lib": ["ES2022"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
